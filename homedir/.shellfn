getunixtime(){
  if [ -z "${1}" ]; then
		date +%s
  else
    date -j -f "%Y-%m-%d" "$1" "+%s"
  fi;
}

convertunixtime() {
  if [ -z "${1}" ]; then
    echo "ERROR: No timestamp specified.";
    return 1;
  fi;
  if [[ "$OSTYPE" == "darwin"* ]]; then
    date -r "$1"
    date -r "$1" -u
  else
    date -d='@$1'
  fi
}

# URL Encode a string
urlencode() {
  local string="${1}"
  local strlen=${#string}
  local encoded=""
  for (( pos=0 ; pos<strlen ; pos++ )); do
     c=${string:$pos:1}
     case "$c" in [-_.~a-zA-Z0-9] ) o="${c}" ;;
        * ) printf -v o '%%%02x' "'$c"
     esac
     encoded+="${o}"
  done
  echo "${encoded}"
}

# URL Decode a string
urldecode() {
    local url_encoded="${1//+/ }"
    printf '%b' "${url_encoded//%/\\x}"
}

